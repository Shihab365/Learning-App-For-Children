<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic8"
        android:orientation="vertical"
        tools:context="com.firstapp.asus.childapps.list8Activity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
    >
        <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list8adid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-1818607113375588/1274572663">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
        <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|top"
                android:paddingLeft="28dp"
                android:paddingTop="25dp"
        >
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/page8id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="32dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
            />
            </ScrollView>
        </LinearLayout>
    <RelativeLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="আগে"
                android:textStyle="bold"
                android:onClick="prev"
                android:background="#49e137"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="পরে"
                android:textStyle="bold"
                android:onClick="next"
                android:background="#49e137"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
        />
    </RelativeLayout>
</LinearLayout>
